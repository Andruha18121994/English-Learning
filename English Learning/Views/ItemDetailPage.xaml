<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="English_Learning.Views.ItemDetailPage"
             Title="Details">

    <ScrollView>
        <StackLayout Spacing="3" Padding="15">
            <Label Text="Word" FontSize="Medium" />
            <Entry Text="{Binding ForeignWord, Mode=TwoWay}" FontSize="Medium" IsReadOnly="True"/>
            <Label Text="Translate" FontSize="Medium" />
            <Entry Text="{Binding Translation, Mode=TwoWay}" FontSize="Medium" IsReadOnly="True"/>
            <Label Text="Method" FontSize="Medium" />
            <Entry Text="{Binding StudyMothod, Mode=TwoWay}" FontSize="Medium" IsReadOnly="True"/>
            <Button Text="About methods" Command="{Binding AboutMethodsCommand}"/>
            <StackLayout Orientation="Horizontal">
                <Button Text="Edit" Command="{Binding EditCommand}" HorizontalOptions="FillAndExpand"></Button>
                <Button Text="Delete" Command="{Binding DeleteCommand}" HorizontalOptions="FillAndExpand"></Button>
            </StackLayout>
        </StackLayout>
    </ScrollView>

</ContentPage>